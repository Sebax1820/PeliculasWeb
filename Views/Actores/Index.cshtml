@model IEnumerable<PeliculasWeb.Models.Actor>

@{
    ViewData["Title"] = "Actores";
}

<link rel="stylesheet" href="~/css/actores.css" />

<h1 class="mb-4">Actores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crear nuevo</a>
</p>

<div class="actor-grid">
    @foreach (var actor in Model)
    {
        <a asp-action="Details" asp-route-id="@actor.Id" class="actor-card">
            <div class="actor-name">@actor.Nombre</div>
        </a>
    }
</div>
