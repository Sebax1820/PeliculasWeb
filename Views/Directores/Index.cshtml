@model IEnumerable<PeliculasWeb.Models.Director>

@{
    ViewData["Title"] = "Directores";
}

<link rel="stylesheet" href="~/css/directores.css" />

<h1 class="mb-4">Directores</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crear nuevo</a>
</p>

<div class="director-grid">
    @foreach (var director in Model)
    {
        <a asp-action="Details" asp-route-id="@director.Id" class="director-card">
            <div class="director-name">@director.Nombre</div>
        </a>
    }
</div>
