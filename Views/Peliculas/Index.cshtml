@model IEnumerable<PeliculasWeb.Models.Pelicula>

@{
    ViewData["Title"] = "Películas";
}

<link rel="stylesheet" href="~/css/peliculas.css" />
<h1 class="mb-4">Películas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crear nueva</a>
</p>

<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Buscar película..." />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </div>
</form>


<div class="movie-grid">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id" class="movie-card">
            <div class="movie-image">
                @if (!string.IsNullOrEmpty(item.ImagenRuta))
                {
                    <img src="@item.ImagenRuta" alt="Portada de @item.Titulo" />
                }
                else
                {
                    <div class="no-image">Sin imagen</div>
                }
            </div>
            <div class="movie-title">
                <h5>@item.Titulo</h5>
            </div>
        </a>
    }
</div>


