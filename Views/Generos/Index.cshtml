@model IEnumerable<PeliculasWeb.Models.Genero>

@{
    ViewData["Title"] = "Géneros";
}

<link rel="stylesheet" href="~/css/generos.css" />

<h1 class="mb-4">Géneros</h1>

<p>
    <a asp-action="Create" class="btn btn-primary mb-3">Crear nuevo</a>
</p>

<div class="genre-grid">
    @foreach (var item in Model)
    {
        <a asp-action="Details" asp-route-id="@item.Id" class="genre-card">
            @item.Nombre
        </a>
    }
</div>
